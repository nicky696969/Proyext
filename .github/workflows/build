name: Sony Focus Project Build

on:
  push:
    branches: [ main, master ]
  workflow_dispatch: # Umožní spustit build ručně tlačítkem

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout kód
        uses: actions/checkout@v3

      - name: Nastavení Java (pro Gradle)
        uses: actions/setup-java@v3
        with:
          java-version: '11'
          distribution: 'temurin'

      - name: Nastavení Android SDK & NDK
        uses: android-actions/setup-android@v2
        with:
          ndk-version: "25.2.9519653" # Verze ideální pro starší Sony ARM32

      - name: Build s Gradle (Release)
        run: |
          chmod +x gradlew
          ./gradlew assembleRelease

      - name: Podepsání APK (Základní debug klíč)
        # Poznámka: Pro Sony kamery často stačí debug podpis pro PMCA instalaci
        run: |
          $ANDROID_HOME/build-tools/33.0.0/apksigner sign --ks-pass pass:android --ks debug.keystore --out app-final-sony.apk app/build/outputs/apk/release/app-release-unsigned.apk
        continue-on-error: true

      - name: Nahrání hotového APK ke stažení
        uses: actions/upload-artifact@v3
        with:
          name: focus-project-build
          path: app/build/outputs/apk/release/*.apk
